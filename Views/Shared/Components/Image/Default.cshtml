@model IList<tblCarouselImages>

<section class="sense-hero">
    <div class="sense-slider">
        @if (Model != null && Model.Count > 0)
        {
            int index = 0;
            foreach (var slide in Model.OrderBy(x => x.DisplayOrder))
            {
                <div class="sense-slide @(index == 0 ? "active" : "")">
                    <img src="@slide.ImagePath" alt="@slide.ImageTitle">
                    <div class="sense-slide-content">
                        <h2>@slide.ImageTitle</h2>
                        <p>@slide.Description</p>
                        @if (!string.IsNullOrEmpty(slide.LinkURL))
                        {
                            <a href="@slide.LinkURL" class="sense-btn sense-btn-primary">Khám phá ngay</a>
                        }
                    </div>
                </div>
                index++;
            }
        }

        <button class="sense-slider-control prev" aria-label="Previous slide">
            <i class="fas fa-chevron-left"></i>
        </button>
        <button class="sense-slider-control next" aria-label="Next slide">
            <i class="fas fa-chevron-right"></i>
        </button>

        <div class="sense-slider-dots">
            @for (int i = 0; i < Model.Count; i++)
            {
                <span class="sense-dot @(i == 0 ? "active" : "")" data-index="@i"></span>
            }
        </div>
    </div>
</section>
