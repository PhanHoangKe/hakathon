@model hakathon.Models.ChangePasswordViewModel


<form asp-controller="Profile" asp-action="ChangePassword" method="post" class="sensy-profile-form">
    @Html.AntiForgeryToken()
        <div class="sensy-form-group">
            <label asp-for="CurrentPassword">Mật khẩu hiện tại</label>
            <input asp-for="CurrentPassword" class="sensy-form-control" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>

        <div class="sensy-form-group">
            <label asp-for="NewPassword">Mật khẩu mới</label>
            <input asp-for="NewPassword" class="sensy-form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="sensy-form-group">
            <label asp-for="ConfirmPassword">Nhập lại mật khẩu</label>
            <input asp-for="ConfirmPassword" class="sensy-form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="sensy-password-requirements">
            <p>Mật khẩu phải có:</p>
        <ul>
            <li class="sensy-requirement" id="sensy-length">Ít nhất 8 ký tự</li>
            <li class="sensy-requirement" id="sensy-uppercase">Ít nhất 1 chữ hoa</li>
            <li class="sensy-requirement" id="sensy-lowercase">Ít nhất 1 chữ thường</li>
            <li class="sensy-requirement" id="sensy-number">Ít nhất 1 số</li>
            <li class="sensy-requirement" id="sensy-special">Ít nhất 1 ký tự đặc biệt</li>
        </ul>
        </div>
        <div class="sensy-form-actions">
            <button type="submit" class="sensy-btn sensy-btn-primary">Đổi mật khẩu</button>
        </div>
</form>

