@model hakathon.Models.tblUserNotifications
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Xác nhận xóa thông báo</h1>
    </div>
    <div class="container bg-light p-5 shadow-lg rounded">
        <p class="lead text-success">Bạn có chắc chắn muốn xóa thông báo này?</p>
        <div class="mb-3">
            <label asp-for="UserID" class="form-label">ID Người Dùng</label>
            <input type="text" class="form-control border-danger" asp-for="UserID" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="NotificationType" class="form-label">Loại Thông Báo</label>
            <input type="text" class="form-control border-danger" asp-for="NotificationType" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="NotificationContent" class="form-label">Nội Dung</label>
            <textarea class="form-control border-danger" asp-for="NotificationContent" disabled></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="RelatedID" class="form-label">ID Liên Quan</label>
            <input type="text" class="form-control border-danger" asp-for="RelatedID" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="RelatedType" class="form-label">Loại Liên Quan</label>
            <input type="text" class="form-control border-danger" asp-for="RelatedType" disabled />
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input border-danger" asp-for="IsRead" disabled>
                <label class="form-check-label" asp-for="IsRead">Đã Đọc</label>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="CreatedDate" class="form-label">Ngày Tạo</label>
            <input type="text" class="form-control border-danger" asp-for="CreatedDate" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="ReadDate" class="form-label">Ngày Đọc</label>
            <input type="text" class="form-control border-danger" asp-for="ReadDate" disabled />
        </div>

        <form asp-action="Delete" method="Post">
            <input type="hidden" asp-for="NotificationID" />
            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-lg btn-secondary" asp-action="Index">
                    <i class="bi bi-arrow-left-circle"></i> Hủy
                </a>
                <button type="submit" class="btn btn-lg btn-danger">
                    <i class="bi bi-trash"></i> Xác nhận xóa
                </button>
            </div>
        </form>
    </div>
</main>