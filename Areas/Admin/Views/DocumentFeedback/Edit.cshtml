@model hakathon.Models.tblDocumentFeedback
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Chỉnh Sửa Phản Hồi Tài Liệu</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Edit">
            <input type="hidden" asp-for="FeedbackID" />
            <div class="form-row row">
                 <div class="form-group col-md-6 mb-3">
                    <label asp-for="DocumentID">ID Tài Liệu</label>
                    <input type="number" class="form-control" asp-for="DocumentID" placeholder="Nhập ID tài liệu (nếu có)...">
                    <span asp-validation-for="DocumentID" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label for="UserID">ID Người Dùng</label>
                    @* <input type="number" class="form-control" asp-for="UserID" placeholder="Nhập ID người dùng (nếu có)...">
                    <span asp-validation-for="UserID" class="text-danger"></span> *@
                    <select asp-for="UserID" class="form-control"
                            asp-items="@(new SelectList(ViewBag.List1, "Value", "Text"))">
                    </select>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="FeedbackType">Loại Phản Hồi</label>
                    <input type="text" class="form-control" asp-for="FeedbackType" placeholder="Nhập loại phản hồi...">
                    <span asp-validation-for="FeedbackType" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12 mb-3">
                    <label asp-for="FeedbackContent">Nội Dung Phản Hồi</label>
                    <textarea class="form-control" asp-for="FeedbackContent" rows="1" placeholder="Nhập nội dung phản hồi..."></textarea>
                    <span asp-validation-for="FeedbackContent" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="FeedbackDate">Ngày Phản Hồi</label>
                    <input type="datetime-local" class="form-control" asp-for="FeedbackDate">
                    <span asp-validation-for="FeedbackDate" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="IsResolved">Đã Giải Quyết?</label>
                    <select class="form-control" asp-for="IsResolved">
                        <option value="true">Có</option>
                        <option value="false">Không</option>
                    </select>
                    <span asp-validation-for="IsResolved" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="ResolvedByUserID">ID Người Giải Quyết</label>
                    <input type="number" class="form-control" asp-for="ResolvedByUserID" placeholder="Nhập ID người giải quyết (nếu có)...">
                    <span asp-validation-for="ResolvedByUserID" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="ResolvedDate">Ngày Giải Quyết</label>
                    <input type="datetime-local" class="form-control" asp-for="ResolvedDate">
                    <span asp-validation-for="ResolvedDate" class="text-danger"></span>
                </div>

                 <div class="form-group col-md-6 mb-3">
                    <label asp-for="ResponseContent">Nội Dung Phản Hồi</label>
                    <textarea class="form-control" asp-for="ResponseContent" rows="1" placeholder="Nhập nội dung phản hồi..."></textarea>
                    <span asp-validation-for="ResponseContent" class="text-danger"></span>
                </div>
            </div>
            <a asp-controller="DocumentFeedback" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-save-fill"></i> Lưu thay đổi
            </button>
        </form>
    </div>
</main>