@using System.Collections.Generic
@using hakathon.Models;
@model List<tblDocumentFeedback>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh Sách Phản Hồi Tài Liệu</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="DocumentFeedback" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i>Thêm Phản Hồi
                        </a>
                    </div>

                    <div class="card-body mt-4">
                        <table class="table table-hover table-bordered datatable" style="background-color: white;">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">ID Phản Hồi</th>
                                    <th class="text-center">ID Tài Liệu</th>
                                    <th class="text-center">ID Người Dùng</th>
                                    <th>Loại Phản Hồi</th>
                                    <th>Nội Dung Phản Hồi</th>
                                    <th class="text-center">Ngày Phản Hồi</th>
                                    <th class="text-center">Đã Giải Quyết</th>
                                    <th class="text-center">ID Người Giải Quyết</th>
                                    <th class="text-center">Ngày Giải Quyết</th>
                                    <th>Nội Dung Phản Hồi</th>
                                    <th class="text-center">Chức Năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center" scope="row">@item.FeedbackID</td>
                                        <td class="text-center">@item.DocumentID</td>
                                        <td class="text-center">@item.UserID</td>
                                        <td>@item.FeedbackType</td>
                                        <td>@item.FeedbackContent</td>
                                        <td class="text-center">@item.FeedbackDate?.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                        <td class="text-center">@item.IsResolved</td>
                                        <td class="text-center">@item.ResolvedByUserID</td>
                                        <td class="text-center">@item.ResolvedDate?.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                        <td>@item.ResponseContent</td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="DocumentFeedback" asp-action="Edit"
                                               asp-route-id="@item.FeedbackID" class="btn btn-primary btn-sm"
                                               title="Chỉnh sửa phản hồi"><i class="bi bi-pencil"></i></a>
                                            <a asp-area="Admin" asp-controller="DocumentFeedback" asp-action="Delete"
                                               asp-route-id="@item.FeedbackID" class="btn btn-danger btn-sm"
                                               title="Xóa phản hồi" onclick="return confirm('Bạn có chắc chắn muốn xóa phản hồi này không?');"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>