@model hakathon.Models.tblContactMessages
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Xác nhận xóa tin nhắn liên hệ</h1>
    </div>
    <div class="container bg-light p-5 shadow-lg rounded">
        <p class="lead text-success">Bạn có chắc chắn muốn xóa tin nhắn này?</p>
        <div class="mb-3">
            <label asp-for="SenderName" class="form-label">Người Gửi</label>
            <input type="text" class="form-control border-danger" asp-for="SenderName" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="SenderEmail" class="form-label">Email</label>
            <input type="email" class="form-control border-danger" asp-for="SenderEmail" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Subject" class="form-label">Tiêu Đề</label>
            <input type="text" class="form-control border-danger" asp-for="Subject" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="MessageText" class="form-label">Nội Dung</label>
            <textarea class="form-control border-danger" asp-for="MessageText" rows="5" disabled></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="MessageDate" class="form-label">Ngày Gửi</label>
            <input type="text" class="form-control border-danger" asp-for="MessageDate" disabled />
        </div>

        <form asp-action="Delete" method="Post">
            <input type="hidden" asp-for="MessageID" />
            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-lg btn-secondary" asp-action="Index">
                    <i class="bi bi-arrow-left-circle"></i> Hủy
                </a>
                <button type="submit" class="btn btn-lg btn-danger">
                    <i class="bi bi-trash"></i> Xác nhận xóa
                </button>
            </div>
        </form>
    </div>
</main>