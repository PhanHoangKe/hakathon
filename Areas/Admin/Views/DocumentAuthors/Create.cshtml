@model hakathon.Models.tblDocumentAuthors
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm Liên Kết Tài Liệu - Tác Giả</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Create">
            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label>ID Tài Liệu</label>
                    <select asp-for="DocumentID" class="form-control"
                            asp-items="@(new SelectList(ViewBag.list2, "Value", "Text"))">
                    </select>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>ID Tác Giả</label>
                    <select asp-for="AuthorID" class="form-control"
                            asp-items="@(new SelectList(ViewBag.list1, "Value", "Text"))">
                    </select>
                </div>
            </div>
            <a asp-controller="DocumentAuthors" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu liên kết
            </button>
        </form>
    </div>
</main>