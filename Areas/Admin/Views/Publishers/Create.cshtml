@model hakathon.Models.tblPublishers
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm nhà xuất bản</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Create">
            <div class="form-row row">
                <div class="form-group col-md-6 mb-3">
                    <lable>Nhập tên nhà xuất bản</lable>
                    <input type="text" class="form-control" asp-for="PublisherName" placeholder="Tên nhà xuất bản...">
                    <span asp-validation-for="PublisherName" class="alert-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Mô tả</label>
                    <input type="text" class="form-control" asp-for="Description" placeholder="Mô tả...">

                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Địa chỉ</label>
                    <input type="text" class="form-control" asp-for="Address" placeholder="Nhập địa chỉ...">

                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Điện thoại</label>
                    <input type="text" class="form-control" asp-for="Phone" placeholder="Nhập số điện thoại...">

                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Thư điện tử</label>
                    <input type="text" class="form-control" asp-for="Email" placeholder="Nhập thư điện tử...">

                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Website</label>
                    <input type="text" class="form-control" asp-for="Website" placeholder="Nhập website...">

                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Địa chỉ</label>
                    <input type="text" class="form-control" asp-for="CreatedDate" placeholder="Ngày nhập...">
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Ngày sửa</label>
                    <input type="text" class="form-control" asp-for="ModifiedDate" placeholder="Ngày sửa...">
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>
                        @Html.CheckBox("IsActive", false)
                        Hiện thị
                    </label>
                </div>
            </div>
            <a asp-controller="Publishers" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu thông tin
            </button>
        </form>
    </div>
</main>
