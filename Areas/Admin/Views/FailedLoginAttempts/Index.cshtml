@using System.Collections.Generic
@using hakathon.Models;
@model List<tblFailedLoginAttempts>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Quản Lý Thẻ Tài Liệu</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="FailedLoginAttempts"
                            asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i>Thêm đăng nhập thất bại
                        </a>
                    </div>


                    <div class="card-body mt-4">
                        <table class="table table-hover table-bordered datatable" style="background-color: white;">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">ID</th>
                                    <th class="text-center">ID Người Dùng</th>
                                    <th>Tên Đăng Nhập</th>
                                    <th>Địa Chỉ IP</th>
                                    <th class="text-center">Thời Gian Thử</th>
                                    <th class="text-center">Chức Năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center" scope="row">@item.AttemptID</td>
                                        <td class="text-center">@item.UserID</td>
                                        <td>@item.Username</td>
                                        <td>@item.IPAddress</td>
                                        <td class="text-center">@item.AttemptDate?.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="FailedLoginAttempt" asp-action="Delete"
                                                asp-route-id="@item.AttemptID" class="btn btn-danger btn-sm"
                                                title="Xóa lần thử thất bại"
                                                onclick="return confirm('Bạn có chắc chắn muốn xóa lần thử đăng nhập thất bại này không?');"><i
                                                    class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
