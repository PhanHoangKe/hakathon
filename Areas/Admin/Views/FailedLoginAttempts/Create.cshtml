@model hakathon.Models.tblFailedLoginAttempts
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm Lần Đăng Nhập Thất Bại (Thường không cần thiết)</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Create">
            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="UserID">ID Người Dùng</label>
                    <input type="number" class="form-control" asp-for="UserID" placeholder="Nhập ID người dùng (nếu có)...">
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="Username">Tên Đăng Nhập</label>
                    <input type="text" class="form-control" asp-for="Username" placeholder="Nhập tên đăng nhập...">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="IPAddress">Địa Chỉ IP</label>
                    <input type="text" class="form-control" asp-for="IPAddress" placeholder="Nhập địa chỉ IP...">
                    <span asp-validation-for="IPAddress" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="AttemptDate">Thời Gian Thử</label>
                    <input type="datetime-local" class="form-control" asp-for="AttemptDate">
                    <span asp-validation-for="AttemptDate" class="text-danger"></span>
                </div>
            </div>
            <a asp-controller="FailedLoginAttempts" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu thông tin
            </button>
        </form>
    </div>
</main>