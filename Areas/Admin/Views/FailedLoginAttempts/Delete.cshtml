@model hakathon.Models.tblFailedLoginAttempts
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Xác nhận xóa lần đăng nhập thất bại</h1>
    </div>
    <div class="container bg-light p-5 shadow-lg rounded">
        <p class="lead text-success">Bạn có chắc chắn muốn xóa lần đăng nhập thất bại này?</p>
        <div class="mb-3">
            <label asp-for="UserID" class="form-label">ID Người Dùng</label>
            <input type="text" class="form-control border-danger" asp-for="UserID" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Username" class="form-label">Tên Đăng Nhập</label>
            <input type="text" class="form-control border-danger" asp-for="Username" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="IPAddress" class="form-label">Địa Chỉ IP</label>
            <input type="text" class="form-control border-danger" asp-for="IPAddress" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="AttemptDate" class="form-label">Thời Gian Thử</label>
            <input type="text" class="form-control border-danger" asp-for="AttemptDate" disabled />
        </div>

        <form asp-action="Delete" method="Post">
            <input type="hidden" asp-for="AttemptID" />
            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-lg btn-secondary" asp-action="Index">
                    <i class="bi bi-arrow-left-circle"></i> Hủy
                </a>
                <button type="submit" class="btn btn-lg btn-danger">
                    <i class="bi bi-trash"></i> Xác nhận xóa
                </button>
            </div>
        </form>
    </div>
</main>