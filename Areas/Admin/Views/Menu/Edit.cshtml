@model hakathon.Models.tblMenu
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Chỉnh sửa mục menu</h2>
    </div>
    <div class="container shadow p-5 bg-light rounded">
        <form method="Post" asp-action="Edit">
            <div class="row mb-4">

                <input type="hidden" asp-for="MenuID" />

                <div class="col-md-6 mb-3">
                    <label for="MenuName">Tên Menu</label>
                    <input type="text" class="form-control border-primary" asp-for="MenuName" placeholder="Tên menu...">
                    <span asp-validation-for="MenuName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="Levels">Cấp Bậc</label>
                    <select asp-for="Levels" class="form-select border-primary" id="levels">
                        <option value="1">1</option>
                        <option value="2">2</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="ParentID">Mã Menu Cha</label>
                    <select asp-for="ParentID" class="form-select border-primary" 
                            asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))">
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="Link">Link</label>
                    <input type="text" class="form-control border-primary" asp-for="Link" placeholder="Nhập link...">
                </div>

                <div class="col-md-6 mb-3">
                    <label for="MenuOrder">Thứ tự Menu</label>
                    <input type="number" class="form-control border-primary" asp-for="MenuOrder" placeholder="Nhập thứ tự của mục...">
                </div>

                <div class="col-md-6 mb-3">
                    <label for="Position">Vị trí</label>
                    <input type="number" class="form-control border-primary" asp-for="Position" placeholder="Nhập vị trí...">
                </div>

                <div class="col-md-6 mb-3 d-flex align-items-center">
                    <label class="form-check-label me-2" for="IsActive">Hiển Thị</label>
                    @Html.CheckBox("IsActive", Model.IsActive, new { @class = "form-check-input" })
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-controller="Menu" asp-action="Index" class="btn btn-lg btn-warning">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-lg btn-primary">
                    <i class="bi bi-file-plus-fill"></i> Lưu Thông Tin
                </button>
            </div>
        </form>
    </div>
</main>
