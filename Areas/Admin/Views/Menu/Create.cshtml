@model hakathon.Models.tblMenu
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm mục Menu</h2>
    </div>

    <div class="container p-5 bg-light shadow rounded">
        <form method="Post" asp-action="Create">
            <div class="row mb-4">
                <div class="col-md-6">
                    <label for="MenuName" class="form-label">Tên Menu</label>
                    <input type="text" class="form-control border-primary" asp-for="MenuName" placeholder="Nhập tên menu...">
                    <span asp-validation-for="MenuName" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label for="Levels" class="form-label">Cấp Bậc</label>
                    <select asp-for="Levels" class="form-select border-primary">
                        <option value="1">1</option>
                        <option value="2">2</option>
                    </select>
                </div>
            </div>


            <div class="row mb-4">
                <div class="col-md-6">
                    <label for="ParentID" class="form-label">Menu Cha</label>
                    <select asp-for="ParentID" class="form-select border-primary" asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))">
                    </select>
                </div>

                <div class="col-md-6">
                    <label for="Link" class="form-label">Link Menu</label>
                    <input type="text" class="form-control border-primary" asp-for="Link" placeholder="Nhập link...">
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label for="MenuOrder" class="form-label">Thứ Tự Menu</label>
                    <input type="number" class="form-control border-primary" asp-for="MenuOrder" placeholder="Thứ tự...">
                </div>

                <div class="col-md-6">
                    <label for="Position" class="form-label">Vị Trí</label>
                    <input type="number" class="form-control border-primary" asp-for="Position" placeholder="Vị trí...">
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6 d-flex align-items-center">
                    <label class="form-check-label me-2" for="IsActive">Hiển Thị</label>
                    @Html.CheckBox("IsActive", new { @class = "form-check-input border-primary" })
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-controller="Menu" asp-action="Index" class="btn btn-warning btn-lg">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>

                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-file-plus-fill"></i> Lưu Thông Tin
                </button>
            </div>
        </form>
    </div>
</main>
