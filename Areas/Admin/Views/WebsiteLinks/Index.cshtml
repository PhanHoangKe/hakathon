@using hakathon.Models;
@model IList<tblWebsiteLinks>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh Sách Liên Kết</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="WebsiteLinks" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i>Thêm Liên Kết
                        </a>
                    </div>

                    <div class="card-body mt-4">
                        <table class="table table-hover table-bordered datatable" style="background-color: white;">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">ID Liên Kết</th>
                                    <th class="text-center">Tên Liên Kết</th>
                                    <th class="text-center">URL</th>
                                    <th class="text-center">Mô Tả</th>
                                    <th class="text-center">ID Liên Kết Cha</th>
                                    <th class="text-center">Thứ Tự Hiển Thị</th>
                                    <th class="text-center">Hoạt Động</th>
                                    <th class="text-center">ID Vai Trò Yêu Cầu</th>
                                    <th class="text-center">Ngày Tạo</th>
                                    <th class="text-center">Ngày Sửa</th>
                                    <th class="text-center">Chức Năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="table-row">
                                        <td class="text-center" scope="row">@item.LinkID</td>
                                        <td class="text-left" scope="row">@item.LinkName</td>
                                        <td class="text-left text-primary" scope="row">
                                            @if (!string.IsNullOrEmpty(item.URL))
                                            {
                                                <a href="@item.URL" target="_blank">@item.URL</a>
                                            }
                                        </td>
                                        <td class="text-left" scope="row">@item.Description</td>
                                        <td class="text-center" scope="row">@item.ParentLinkID</td>
                                        <td class="text-center" scope="row">@item.DisplayOrder</td>
                                        <td class="text-center" scope="row">@item.IsActive</td>
                                        <td class="text-center" scope="row">@item.RequiredRoleID</td>
                                        <td class="text-center" scope="row">@item.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td class="text-center" scope="row">@item.ModifiedDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td class="text-center" scope="row">
                                            <a asp-area="Admin" asp-controller="WebsiteLinks" asp-action="Edit"
                                               asp-route-id="@item.LinkID" class="btn btn-primary btn-sm"
                                               title="Chỉnh sửa liên kết"><i class="bi bi-pencil"></i></a>
                                            <a asp-area="Admin" asp-controller="WebsiteLinks" asp-action="Delete"
                                               asp-route-id="@item.LinkID" class="btn btn-danger btn-sm"
                                               title="Xóa liên kết" onclick="return confirm('Bạn có chắc chắn muốn xóa liên kết này không?');"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>