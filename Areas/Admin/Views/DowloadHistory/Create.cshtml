@model hakathon.Models.tblDownloadHistory
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm Lượt Tải Xuống</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Create">
            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label>ID Người Dùng</label>
                    <select asp-for="UserID" class="form-control"
                        asp-items="@(new SelectList(ViewBag.list1, "Value", "Text"))">
                        <option value="">-- Chọn Người Dùng --</option>
                    </select>
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>ID Tài Liệu</label>
                    <input type="number" class="form-control" asp-for="DocumentID" placeholder="Nhập ID tài liệu...">
                    <span asp-validation-for="DocumentID" class="text-danger"></span>

                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Ngày Tải Xuống</label>
                    <input type="text" class="form-control" asp-for="DownloadDate">
                    <span asp-validation-for="DownloadDate" class="text-danger"></span>
                </div>
            </div>
            <a asp-controller="DowloadHistory" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu thông tin
            </button>
        </form>
    </div>
</main>