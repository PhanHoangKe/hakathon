@model hakathon.Models.tblTags
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Xác nhận xóa thẻ</h1>
    </div>
    <div class="container bg-light p-5 shadow-lg rounded">
        <p class="lead text-success">Bạn có chắc chắn muốn xóa thẻ này?</p>
        <div class="mb-3">
            <label asp-for="TagName" class="form-label">Tên Thẻ</label>
            <input type="text" class="form-control border-danger" asp-for="TagName" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="CreatedDate" class="form-label">Ngày Tạo</label>
            <input type="text" class="form-control border-danger" asp-for="CreatedDate" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="IsActive" class="form-label">Hoạt Động?</label>
            <input type="text" class="form-control border-danger" asp-for="IsActive" disabled />
        </div>

        <form asp-action="Delete" method="Post">
            <input type="hidden" asp-for="TagID" />
            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-lg btn-secondary" asp-action="Index">
                    <i class="bi bi-arrow-left-circle"></i> Hủy
                </a>
                <button type="submit" class="btn btn-lg btn-danger">
                    <i class="bi bi-trash"></i> Xác nhận xóa
                </button>
            </div>
        </form>
    </div>
</main>