@model hakathon.Models.tblTags
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm Mới Thẻ</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Create">
            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="TagName">Tên Thẻ</label>
                    <input type="text" class="form-control" asp-for="TagName" placeholder="Nhập tên thẻ...">
                    <span asp-validation-for="TagName" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="CreatedDate">Ngày Tạo</label>
                    <input type="text" class="form-control" asp-for="CreatedDate">
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>

                <div class="row mb-4">
                <div class="col-md-6 d-flex align-items-center">
                 
                    @Html.CheckBox("IsActive", new { @class = "form-check-input border-primary" })
                       <label class="form-check-label me-2" for="IsActive">Hiển Thị</label>
                </div>
            </div>
            </div>
            <a asp-controller="Tags" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-tag-fill"></i> Lưu thẻ
            </button>
        </form>
    </div>
</main>