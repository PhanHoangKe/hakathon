@model hakathon.Models.tblUsers
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Sửa thông tin tài khoản</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Edit">
            <div class="form-row">
                <input type="text" class="form-contro" asp-for="UserID" type="hidden">
                <div class="form-group col-md-6 mb-3">
                    <label>Tên đăng nhập</label>
                    <input type="text" class="form-control" asp-for="UserName" placeholder="Nhập tên đăng nhập...">
                    <span asp-validation-for="UserName" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Địa chỉ điện tử</label>
                    <input type="text" class="form-control" asp-for="Email" placeholder="Nhập thư điện tử...">
                </div>
                 <div class="form-group col-md-6 mb-3">
                    <label for="Password">Mật khẩu</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                

                <div class="form-group col-md-6 mb-3">
                    <label>
                        @Html.CheckBox("IsActive", Model.IsActive) Hiện thị
                    </label>
                </div>
            </div>
            <a asp-controller="User" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu thông tin
            </button>
        </form>
    </div>
</main>