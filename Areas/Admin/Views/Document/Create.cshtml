@model hakathon.Models.tblDocuments
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm tài liệu</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Create">
            <div class="form-row row">


                <div class="form-group col-md-6 mb-3">
                    <label>Tiêu đề</label>
                    <input type="text" class="form-control" asp-for="Title" placeholder="Nhập tiêu đề...">

                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Mô tả</label>
                    <input type="text" class="form-control" asp-for="Description" placeholder="Nhập mô tả...">

                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Mã danh mục</label>
                    <select asp-for="CategoryID" class="form-control"
                        asp-items="@(new SelectList(ViewBag.list1, "Value", "Text"))">
                    </select>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Mã NXB</label>
                    <select asp-for="PublisherID" class="form-control"
                        asp-items="@(new SelectList(ViewBag.list2, "Value", "Text"))">
                    </select>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Ngày tải lên</label>
                    <input type="text" class="form-control" asp-for="UploadDate" placeholder="Ngày tải lên...">

                </div>

                <div class="form-group col-md-6 mb-3">
                    <label class="control-label">Đường dẫn gốc của tệp</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button class="btn btn-success" type="button"
                                onclick="document.getElementById('original_file').click()">Chọn</button>
                        </div>
                        <input type="text" class="form-control" asp-for="FileOriginalPath" id="original_path" readonly>
                    </div>
                    <input type="file" id="original_file" style="display:none"
                        onchange="updatePath(this, 'original_path')" />
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label class="control-label">Đường dẫn PDF</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button class="btn btn-success" type="button"
                                onclick="document.getElementById('pdf_file').click()">Chọn</button>
                        </div>
                        <input type="text" class="form-control" asp-for="FilePDFPath" id="pdf_path" readonly>
                    </div>
                    <input type="file" id="pdf_file" style="display:none" onchange="updatePath(this, 'pdf_path')" />
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Kích thước tệp</label>
                    <input type="text" class="form-control" asp-for="FileSize" placeholder="kích thước tệp...">

                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Loại tệp</label>
                    <input type="text" class="form-control" asp-for="FileType" placeholder="Loại tệp...">

                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Số lượng xem</label>
                    <input type="text" class="form-control" asp-for="ViewCount" placeholder="Số lượng xem...">

                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Số lượng tải </label>
                    <input type="text" class="form-control" asp-for="DownloadCount" placeholder="Nhập số lượng tải...">

                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Mã người tải lên</label>
                    @* <input type="text" class="form-control" asp-for="UploadedByUserID"
                        placeholder="Mã người tải lên..."> *@
                        <select asp-for="UserID" class="form-control"
                        asp-items="@(new SelectList(ViewBag.list3, "Value", "Text"))">
                    </select>

                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Ngày tạo</label>
                    <input type="text" class="form-control" asp-for="CreatedDate" placeholder="Ngày tạo...">

                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Ngày sửa</label>
                    <input type="text" class="form-control" asp-for="ModifiedDate" placeholder="Ngày sửa...">

                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>
                        @Html.CheckBox("IsApproved", false)
                        Phê duyệt
                    </label>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>
                        @Html.CheckBox("IsActive", false)
                        Hiện thị
                    </label>
                </div>
            </div>
            <a asp-controller="Document" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu thông tin
            </button>
        </form>
    </div>
</main>
<script>
    function updatePath(input, targetId) {
        if (input.files.length > 0) {
            document.getElementById(targetId).value = input.files[0].name;
        }
    }
</script>
