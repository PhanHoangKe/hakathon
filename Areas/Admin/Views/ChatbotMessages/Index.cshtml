@using System.Collections.Generic
@using hakathon.Models;
@model List<tblChatbotMessages>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh Sách Tin Nhắn Chatbot</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="ChatbotMessages" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i>Thêm Tin Nhắn
                        </a>
                    </div>

                    <div class="card-body mt-4">
                        <table class="table table-hover table-bordered datatable" style="background-color: white;">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">ID Tin Nhắn</th>
                                    <th class="text-center">ID Hội Thoại</th>
                                    <th class="text-center">Tin Nhắn Người Dùng</th>
                                    <th>Nội Dung Tin Nhắn</th>
                                    <th class="text-center">Thời Gian Gửi</th>
                                    <th class="text-center">Chức Năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center" scope="row">@item.MessageID</td>
                                        <td class="text-center">@item.ConversationID</td>
                                        <td class="text-center">@item.IsUserMessage</td>
                                        <td>@item.MessageText</td>
                                        <td class="text-center">@item.MessageTime?.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="ChatbotMessages" asp-action="Edit"
                                               asp-route-id="@item.MessageID" class="btn btn-primary btn-sm"
                                               title="Chỉnh sửa tin nhắn"><i class="bi bi-pencil"></i></a>
                                            <a asp-area="Admin" asp-controller="ChatbotMessages" asp-action="Delete"
                                               asp-route-id="@item.MessageID" class="btn btn-danger btn-sm"
                                               title="Xóa tin nhắn" onclick="return confirm('Bạn có chắc chắn muốn xóa tin nhắn này không?');"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>