@model hakathon.Models.tblChatbotMessages
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Xác nhận xóa tin nhắn</h1>
    </div>
    <div class="container bg-light p-5 shadow-lg rounded">
        <p class="lead text-success">Bạn có chắc chắn muốn xóa tin nhắn này?</p>
        <div class="mb-3">
            <label asp-for="ConversationID" class="form-label">ID Hội Thoại</label>
            <input type="text" class="form-control border-danger" asp-for="ConversationID" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="IsUserMessage" class="form-label">Tin Nhắn Người Dùng?</label>
            <input type="text" class="form-control border-danger" asp-for="IsUserMessage" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="MessageText" class="form-label">Nội Dung Tin Nhắn</label>
            <textarea class="form-control border-danger" asp-for="MessageText" rows="3" disabled></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="MessageTime" class="form-label">Thời Gian Gửi</label>
            <input type="text" class="form-control border-danger" asp-for="MessageTime" disabled />
        </div>

        <form asp-action="Delete" method="Post">
            <input type="hidden" asp-for="MessageID" />
            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-lg btn-secondary" asp-action="Index">
                    <i class="bi bi-arrow-left-circle"></i> Hủy
                </a>
                <button type="submit" class="btn btn-lg btn-danger">
                    <i class="bi bi-trash"></i> Xác nhận xóa
                </button>
            </div>
        </form>
    </div>
</main>