@model hakathon.Models.tblRoles
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm Mới Vai Trò</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Create">
            <div class="form-row">
                <div class="form-group col-md-12 mb-3">
                    <label asp-for="RoleName">Tên Vai Trò</label>
                    <input type="text" class="form-control" asp-for="RoleName" placeholder="Nhập tên vai trò...">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
            <a asp-controller="Roles" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu vai trò
            </button>
        </form>
    </div>
</main>