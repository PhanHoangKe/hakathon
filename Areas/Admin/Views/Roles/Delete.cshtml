@model hakathon.Models.tblRoles
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Xác nhận xóa vai trò</h1>
    </div>
    <div class="container bg-light p-5 shadow-lg rounded">
        <p class="lead text-success">Bạn có chắc chắn muốn xóa vai trò này?</p>
        <div class="mb-3">
            <label asp-for="RoleName" class="form-label">Tên Vai Trò</label>
            <input type="text" class="form-control border-danger" asp-for="RoleName" disabled />
        </div>

        <form asp-action="Delete" method="Post">
            <input type="hidden" asp-for="RoleID" />
            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-lg btn-secondary" asp-action="Index">
                    <i class="bi bi-arrow-left-circle"></i> Hủy
                </a>
                <button type="submit" class="btn btn-lg btn-danger">
                    <i class="bi bi-trash"></i> Xác nhận xóa
                </button>
            </div>
        </form>
    </div>
</main>