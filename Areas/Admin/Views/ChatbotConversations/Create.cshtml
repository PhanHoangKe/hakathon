@model hakathon.Models.tblChatbotConversations
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm Mới Hội Thoại Chatbot</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Create">
            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="UserID">ID Người Dùng</label>
                    <input type="number" class="form-control" asp-for="UserID" placeholder="Nhập ID người dùng (nếu có)...">
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="DocumentID">ID Tài Liệu</label>
                    <input type="number" class="form-control" asp-for="DocumentID" placeholder="Nhập ID tài liệu (nếu có)...">
                    <span asp-validation-for="DocumentID" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="StartTime">Thời Gian Bắt Đầu</label>
                    <input type="datetime-local" class="form-control" asp-for="StartTime">
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="LastMessageTime">Thời Gian Tin Nhắn Cuối</label>
                    <input type="datetime-local" class="form-control" asp-for="LastMessageTime">
                    <span asp-validation-for="LastMessageTime" class="text-danger"></span>
                </div>
            </div>
            <a asp-controller="ChatbotConversations" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu thông tin
            </button>
        </form>
    </div>
</main>