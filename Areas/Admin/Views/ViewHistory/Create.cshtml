@model hakathon.Models.tblViewHistory
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm Mới Lịch Sử Xem (Thường không cần thiết)</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Create">
            <div class="form-row row">
                <div class="form-group col-md-6 mb-3">
                    <label for="UserID">ID Người Dùng</label>
                    @* <input type="number" class="form-control" asp-for="UserID" placeholder="Nhập ID người dùng (nếu có)...">
                    <span asp-validation-for="UserID" class="text-danger"></span> *@
                    <select asp-for="UserID" class="form-control"
                            asp-items="@(new SelectList(ViewBag.List1, "Value", "Text"))">
                    </select>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label for="DocumentID">ID Tài Liệu</label>
                    <input type="number" class="form-control" asp-for="DocumentID" placeholder="Nhập ID tài liệu (nếu có)...">
                    <span asp-validation-for="DocumentID" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="ViewDate">Ngày Xem</label>
                    <input type="datetime-local" class="form-control" asp-for="ViewDate">
                    <span asp-validation-for="ViewDate" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="ViewDuration">Thời Gian Xem (giây)</label>
                    <input type="number" class="form-control" asp-for="ViewDuration" placeholder="Nhập thời gian xem...">
                    <span asp-validation-for="ViewDuration" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="LastPageViewed">Trang Cuối Đã Xem</label>
                    <input type="number" class="form-control" asp-for="LastPageViewed" placeholder="Nhập trang cuối đã xem...">
                    <span asp-validation-for="LastPageViewed" class="text-danger"></span>
                </div>
            </div>
            <a asp-controller="ViewHistory" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu lịch sử xem
            </button>
        </form>
    </div>
</main>