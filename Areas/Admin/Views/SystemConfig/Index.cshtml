@using System.Collections.Generic
@using hakathon.Models;
@model List<tblSystemConfig>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh Sách Cấu Hình Hệ Thống</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="SystemConfig" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i>Thêm Cấu Hình
                        </a>
                    </div>

                    <div class="card-body mt-4">
                        <table class="table table-hover table-bordered datatable" style="background-color: white;">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">ID</th>
                                    <th>Khóa Cấu Hình</th>
                                    <th>Giá Trị</th>
                                    <th>Mô Tả</th>
                                    <th class="text-center">Kiểu Dữ Liệu</th>
                                    <th class="text-center">Ngày Sửa</th>
                                    <th class="text-center">Người Sửa</th>
                                    <th class="text-center">Chức Năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center" scope="row">@item.ConfigID</td>
                                        <td>@item.ConfigKey</td>
                                        <td>@item.ConfigValue</td>
                                        <td>@item.Description</td>
                                        <td class="text-center">@item.DataType</td>
                                        <td class="text-center">@item.ModifiedDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td class="text-center">@item.ModifiedByUserID</td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="SystemConfig" asp-action="Edit"
                                               asp-route-id="@item.ConfigID" class="btn btn-primary btn-sm"
                                               title="Chỉnh sửa cấu hình"><i class="bi bi-pencil"></i></a>
                                            <a asp-area="Admin" asp-controller="SystemConfig" asp-action="Delete"
                                               asp-route-id="@item.ConfigID" class="btn btn-danger btn-sm"
                                               title="Xóa cấu hình" onclick="return confirm('Bạn có chắc chắn muốn xóa cấu hình này không?');"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>