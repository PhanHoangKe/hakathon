@using System.Collections.Generic
@using hakathon.Models;
@model List<tblTransactionHistory>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Lịch Sử Giao Dịch</h2>
    </div>

     <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="TransactionHistory" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i>Thêm Giao Dịch
                        </a>
                    </div>

                    <div class="card-body mt-4">
                        <table class="table table-hover table-bordered datatable" style="background-color: white;">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">ID Giao Dịch</th>
                                    <th class="text-center">ID Người Dùng</th>
                                    <th class="text-center">ID Tài Liệu</th>
                                    <th>Loại Hành Động</th>
                                    <th class="text-center">Ngày Thực Hiện</th>
                                    <th>Mô Tả</th>
                                    <th class="text-center">Chức Năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center" scope="row">@item.TransactionID</td>
                                        <td class="text-center">@item.UserID</td>
                                        <td class="text-center">@item.DocumentID</td>
                                        <td>@item.ActionType</td>
                                        <td class="text-center">@item.ActionDate?.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                        <td>@item.Description</td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="TransactionHistory" asp-action="Delete"
                                               asp-route-id="@item.TransactionID" class="btn btn-danger btn-sm"
                                               title="Xóa giao dịch" onclick="return confirm('Bạn có chắc chắn muốn xóa giao dịch này không?');"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>