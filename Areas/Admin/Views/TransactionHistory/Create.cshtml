@model hakathon.Models.tblTransactionHistory
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm Mới Giao Dịch (Thường không cần thiết)</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Create">
            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="UserID">ID Người Dùng</label>
                    <input type="number" class="form-control" asp-for="UserID" placeholder="Nhập ID người dùng (nếu có)...">
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="DocumentID">ID Tài Liệu</label>
                    <input type="number" class="form-control" asp-for="DocumentID" placeholder="Nhập ID tài liệu (nếu có)...">
                    <span asp-validation-for="DocumentID" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="ActionType">Loại Hành Động</label>
                    <input type="text" class="form-control" asp-for="ActionType" placeholder="Ví dụ: Download, View, Upload...">
                    <span asp-validation-for="ActionType" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="ActionDate">Ngày Thực Hiện</label>
                    <input type="datetime-local" class="form-control" asp-for="ActionDate">
                    <span asp-validation-for="ActionDate" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12 mb-3">
                    <label asp-for="Description">Mô Tả</label>
                    <textarea class="form-control" asp-for="Description" rows="3" placeholder="Nhập mô tả..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <a asp-controller="TransactionHistory" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Thêm giao dịch
            </button>
        </form>
    </div>
</main>