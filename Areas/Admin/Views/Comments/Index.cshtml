@using hakathon.Models
@model IList<tblComments>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh sách bình luận</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a class="btn btn-success" asp-area="Admin" asp-controller="Comments" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i> Thêm bình luận
                        </a>
                    </div>

                    <div class="card-body mt-4">
                        <table class="table table-hover table-bordered datatable" style="background-color: white;">
                            <thead class="thead-light">
                                <tr class="text-center">
                                    <th>ID</th>
                                    <th>Nội dung</th>
                                    <th>Người dùng</th>
                                    
                                    <th>Tài liệu</th>
                                    <th>Ngày bình luận</th>
                                    <th>Trạng thái</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="table-row">
                                        <td class="text-center" scope="row">@item.CommentID</td>
                                        <td class="text-left text-primary" scope="row">
                                            <a asp-area="Admin" asp-controller="Comments" asp-action="Details"
                                                asp-route-id="@item.CommentID">@item.CommentText</a>
                                        </td>
                                        <td class="text-center" scope="row">@item.user?.UserName</td>
                                        <td class="text-center" scope="row">@item.document?.Title</td>
                                        <td class="text-center" scope="row">@item.CommentDate</td>
                                
                                        <td class="text-center" scope="row">
                                            @if (item.IsActive.HasValue && item.IsActive.Value)
                                            {
                                                <span class="badge bg-success">True</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">False</span>
                                            }
                                        </td>
                                        <td class="text-center" scope="row">
                                            <a asp-area="Admin" asp-controller="Comments" asp-action="Edit"
                                                asp-route-id="@item.CommentID" class="btn btn-primary btn-sm"
                                                title="Chỉnh sửa danh mục tài liệu"><i class="bi bi-pencil"></i></a>
                                            <a asp-area="Admin" asp-controller="Comments" asp-action="Delete"
                                                asp-route-id="@item.CommentID" class="btn btn-danger btn-sm"
                                                title="Xóa danh mục tài liệu"
                                                onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục tài liệu này không?');"><i
                                                    class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>
