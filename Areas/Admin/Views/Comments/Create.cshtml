@model hakathon.Models.tblComments

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm bình luận</h2>
    </div>

    <div class="container shadow p-5">
        <form method="post" asp-action="Create">
            <div class="form-row row">

                <div class="form-group col-md-6 mb-3">
                    <label for="UserID">Người bình luận</label>
                    <select asp-for="UserID" class="form-control"
                            asp-items="@(new SelectList(ViewBag.List1, "Value", "Text"))">
                    </select>
                </div>
                 <div class="form-group col-md-6 mb-3">
                    <label > Ma Tài liệu</label>
                    <input type="text" asp-for="DocumentID" class="form-control" />
                    <span asp-validation-for="DocumentID" class="text-danger"></span>

                   
                </div> 

                <div class="form-group col-md-6 mb-3">
                    <label>Nội dung bình luận</label>
                    <textarea asp-for="CommentText" class="form-control" rows="1" placeholder="Nhập nội dung bình luận..."></textarea>
                    <span asp-validation-for="CommentText" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Ngày bình luận</label>
                    <input type="text" asp-for="CommentDate" class="form-control" />
                    <span asp-validation-for="CommentDate" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>
                        @Html.CheckBox("IsActive", false)
                        Hiện thị
                    </label>
                </div>
            </div>

            <a asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu thông tin
            </button>
        </form>
    </div>
</main>
