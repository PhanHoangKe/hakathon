<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicon -->
  <link href="~/admin/assets/img/favicon.png" rel="icon">
  <link href="~/admin/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&family=Nunito:wght@300;400;600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <!-- Bootstrap CSS (chỉ dùng bản CDN 5.3) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="~/admin/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="~/admin/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="~/admin/assets/vendor/quill/quill.snow.css" rel="stylesheet">
  <link href="~/admin/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
  <link href="~/admin/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="~/admin/assets/vendor/simple-datatables/style.css" rel="stylesheet">

  <!-- Main Template CSS -->
  <link href="~/admin/assets/css/style.css" rel="stylesheet">

  <!-- jQuery (load sớm để các plugin khác sử dụng được) -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>

  <!-- ======= Header ======= -->
  <header id="header" class="header fixed-top d-flex align-items-center" style="background-color: #ffffff; color: white;">
    <div class="d-flex align-items-center justify-content-between">
      <a href="index" class="logo d-flex align-items-center" style="margin-left: 23px;">
        <img src="#" alt="Sách Logo" style="transform: scale(1.5); margin-right: 15px;">
        <span class="d-none d-lg-block" style="color: rgb(0, 0, 0); font-size: 20px;">E-STUDY ENGLISH</span>
      </a>
      <i class="bi bi-list toggle-sidebar-btn" style="color: rgb(0, 0, 0);"></i>
    </div>

    <!-- Search Bar -->
    <div class="search-bar">
      <form class="search-form d-flex align-items-center" method="POST" action="#">
        <input type="text" name="query" placeholder="Search" title="Enter search keyword"
          style="color: rgb(0, 0, 0); background-color: #ffffff; border: 1px solid rgb(103, 103, 103);">
        <button type="submit" title="Search" style="color: rgb(169, 63, 63); background-color: #ffffff; border: none;">
          <i class="bi bi-search" style="color: rgb(0, 0, 0);"></i>
        </button>
      </form>
    </div>

    <!-- Icons Navigation -->
    <nav class="header-nav ms-auto">
      <ul class="d-flex align-items-center">
        <!-- Mobile Search Icon -->
        <li class="nav-item d-block d-lg-none">
          <a class="nav-link nav-icon search-bar-toggle" href="#">
            <i class="bi bi-search" style="color: black;"></i>
          </a>
        </li>

        <!-- Profile Dropdown -->
        <li class="nav-item dropdown pe-3">
          <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown"
            style="color: rgb(0, 0, 0);">
            <img src="~/assets/img/avatar_1.jpg" alt="Profile" class="rounded-circle">
            <span class="d-none d-md-block dropdown-toggle ps-2" style="color: rgb(0, 0, 0);">@User.Identity.Name</span>
          </a>

          <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile" style="background-color: #ffffff;">
            <li class="dropdown-header">
              <h6 style="color: rgb(0, 0, 0);">@User.Identity.Name</h6>
            </li>
            <li><hr class="dropdown-divider"></li>

            <li>
              <a class="dropdown-item d-flex align-items-center" href="users-profile" style="color: rgb(0, 0, 0);">
                <i class="bi bi-person" style="color: rgb(0, 0, 0);"></i>
                <span>Hồ sơ của tôi</span>
              </a>
            </li>
            <li><hr class="dropdown-divider"></li>

            <li>
              <a class="dropdown-item d-flex align-items-center" href="users-profile" style="color: rgb(0, 0, 0);">
                <i class="bi bi-gear" style="color: black;"></i>
                <span>Cài đặt tài khoản</span>
              </a>
            </li>
            <li><hr class="dropdown-divider"></li>

            <li>
              <a class="dropdown-item d-flex align-items-center" href="pages-faq" style="color: rgb(0, 0, 0);">
                <i class="bi bi-question-circle" style="color: black;"></i>
                <span>Cần trợ giúp?</span>
              </a>
            </li>
            <li><hr class="dropdown-divider"></li>

            <li>
              <a class="dropdown-item d-flex align-items-center" href="#" onclick="logout(); return false;">
                <i class="bi bi-box-arrow-right" style="color: black;"></i>
                <span>Đăng xuất</span>
              </a>
            </li>

            <script>
              function logout() {
                $.ajax({
                  url: '/Login/Logout',
                  type: 'POST',
                  success: function () {
                    window.location.href = 'http://localhost:5186';
                  },
                  error: function (error) {
                    console.error('Logout failed:', error);
                  }
                });
              }
            </script>
          </ul>
        </li>
      </ul>
    </nav>
  </header>
  <!-- End Header -->

  <!-- ======= Sidebar ======= -->
  @await Component.InvokeAsync("AdminMenu")
  <!-- End Sidebar -->

  <!-- ======= Main Content ======= -->
  @RenderBody()
  <!-- ======= End Main Content ======= -->

  <!-- Back to Top Button -->
  <a href="#" class="back-to-top d-flex align-items-center justify-content-center">
    <i class="bi bi-arrow-up-short"></i>
  </a>

  <!-- Vendor JS Files -->
  <script src="~/admin/assets/vendor/apexcharts/apexcharts.min.js"></script>
  <script src="~/admin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="~/admin/assets/vendor/chart.js/chart.umd.js"></script>
  <script src="~/admin/assets/vendor/echarts/echarts.min.js"></script>
  <script src="~/admin/assets/vendor/quill/quill.js"></script>
  <script src="~/admin/assets/vendor/simple-datatables/simple-datatables.js"></script>
  <script src="~/admin/assets/vendor/tinymce/tinymce.min.js"></script>
  <script src="~/admin/assets/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS -->
  <script src="~/admin/assets/js/main.js"></script>

  @RenderSection("Scripts", required: false)


</body>
</html>
