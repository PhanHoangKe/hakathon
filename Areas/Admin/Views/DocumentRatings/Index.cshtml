@using System.Collections.Generic
@using hakathon.Models;
@model List<tblDocumentRatings>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh Sách Đánh Giá Tài Liệu</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="DocumentRatings" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i>Thêm Đánh Giá
                        </a>
                    </div>

                    <div class="card-body mt-4">
                        <table class="table table-hover table-bordered datatable" style="background-color: white;">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">ID Đánh Giá</th>
                                    <th class="text-center">ID Tài Liệu</th>
                                    <th class="text-center">ID Người Dùng</th>
                                    <th class="text-center">Điểm Đánh Giá</th>
                                    <th class="text-center">Ngày Đánh Giá</th>
                                    <th>Bình Luận</th>
                                    <th class="text-center">Chức Năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center" scope="row">@item.RatingID</td>
                                        <td class="text-center">@item.DocumentID</td>
                                        <td class="text-center">@item.UserID</td>
                                        <td class="text-center">@item.Rating</td>
                                        <td class="text-center">@item.RatingDate?.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                        <td>@item.Comment</td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="DocumentRatings" asp-action="Edit"
                                               asp-route-id="@item.RatingID" class="btn btn-primary btn-sm"
                                               title="Chỉnh sửa đánh giá"><i class="bi bi-pencil"></i></a>
                                            <a asp-area="Admin" asp-controller="DocumentRatings" asp-action="Delete"
                                               asp-route-id="@item.RatingID" class="btn btn-danger btn-sm"
                                               title="Xóa đánh giá" onclick="return confirm('Bạn có chắc chắn muốn xóa đánh giá này không?');"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>