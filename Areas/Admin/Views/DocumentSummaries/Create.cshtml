@model hakathon.Models.tblDocumentSummaries
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm Mới Tóm Tắt Tài Liệu</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Create">
            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="DocumentID">ID Tài Liệu</label>
                    <input type="number" class="form-control" asp-for="DocumentID" placeholder="Nhập ID tài liệu (nếu có)...">
                    <span asp-validation-for="DocumentID" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12 mb-3">
                    <label asp-for="SummaryText">Nội Dung Tóm Tắt</label>
                    <textarea class="form-control" asp-for="SummaryText" rows="5" placeholder="Nhập nội dung tóm tắt..."></textarea>
                    <span asp-validation-for="SummaryText" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="GeneratedDate">Ngày Tạo</label>
                    <input type="datetime-local" class="form-control" asp-for="GeneratedDate">
                    <span asp-validation-for="GeneratedDate" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="GeneratedByModel">Model Tạo</label>
                    <input type="text" class="form-control" asp-for="GeneratedByModel" placeholder="Nhập model tạo tóm tắt (nếu có)...">
                    <span asp-validation-for="GeneratedByModel" class="text-danger"></span>
                </div>
            </div>
            <a asp-controller="DocumentSummaries" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu thông tin
            </button>
        </form>
    </div>
</main>