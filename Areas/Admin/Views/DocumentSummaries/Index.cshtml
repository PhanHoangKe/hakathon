@using System.Collections.Generic
@using hakathon.Models;
@model List<tblDocumentSummaries>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh Sách Tóm Tắt Tài Liệu</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="DocumentSummaries" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i>Thêm Tóm Tắt
                        </a>
                    </div>

                    <div class="card-body mt-4">
                        <table class="table table-hover table-bordered datatable" style="background-color: white;">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">ID Tóm Tắt</th>
                                    <th class="text-center">ID Tài Liệu</th>
                                    <th>Nội Dung Tóm Tắt</th>
                                    <th class="text-center">Ngày Tạo</th>
                                    <th>Model Tạo</th>
                                    <th class="text-center">Chức Năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center" scope="row">@item.SummaryID</td>
                                        <td class="text-center">@item.DocumentID</td>
                                        <td>@item.SummaryText</td>
                                        <td class="text-center">@item.GeneratedDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@item.GeneratedByModel</td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="DocumentSummaries" asp-action="Edit"
                                               asp-route-id="@item.SummaryID" class="btn btn-primary btn-sm"
                                               title="Chỉnh sửa tóm tắt"><i class="bi bi-pencil"></i></a>
                                            <a asp-area="Admin" asp-controller="DocumentSummaries" asp-action="Delete"
                                               asp-route-id="@item.SummaryID" class="btn btn-danger btn-sm"
                                               title="Xóa tóm tắt" onclick="return confirm('Bạn có chắc chắn muốn xóa tóm tắt này không?');"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>